@{
    ViewData["Title"] = "Home Page";
}
<style>
    .div3 {
        width: 500px;
        height: 300px;
        border: 1px solid blue;
    }

    .div1 {
        border: 2px solid green;
    }

    .div2 {
        width: 500px;
        height: 300px;
        padding: 50px;
        border: 1px solid red;
    }

    .button {
        background-color: Crimson;
        border-radius: 5px;
        color: white;
        padding: .5em;
        text-decoration: none;
    }

        .button:focus,
        .button:hover {
            background-color: FireBrick;
            color: White;
        }

    .content {
        display: none;
        margin: 1em 0;
    }

        .content.active,
        .no-js .content {
            display: block;
        }
</style>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
    .block {
        display: block;
        width: 100%;
        height: 100%;
        border: none;
        background-color: #4CAF50;
        color: white;
        padding: 14px 28px;
        font-size: 16px;
        cursor: pointer;
        text-align: center;
    }

        .block:hover {
            background-color: #ddd;
            color: black;
        }
</style>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<div class="text-center">
    @*<h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@


</div>
<div style="margin-bottom:20%">

    @foreach (var Orders in ViewBag.OrderList)
    {
        if (Orders.OrderPickStatus == "Processing")
        {
            <div id="OrderBox" class="container" style="border-style:solid;color:red">
                <div style="width:70%;float:left">
                    <b>OrderNumber:</b>
                    @Orders.OrderNum<pre><b>Customer Number:</b> @Orders.CustNum</pre>
                    <pre><b>Alloc Priority Code: </b> @Orders.AllocPriorityCode</pre>
                    <pre><b>Reserve Priority Code: </b> @Orders.ReservePriorityCode</pre>
                    <pre><b>OrderDate: </b> @Orders.OrderDateTime</pre>
                </div>
                <div style="width:30%;float:right;">
                    <a class="block" style="float:right;margin-top:20%;background-color:red" href="javascript:void()">Pick Under Progress</a>
                </div>
            </div>
        }
        if (Orders.OrderPickStatus == null)
        {
            <div id="OrderBox" class="container" style="border-style:solid;color:green">
                <div style="width:70%;float:left">
                    <b>OrderNumber:</b>
                    @Orders.OrderNum<pre><b>Customer Number:</b> @Orders.CustNum</pre>
                    <pre><b>Alloc Priority Code: </b> @Orders.AllocPriorityCode</pre>
                    <pre><b>Reserve Priority Code: </b> @Orders.ReservePriorityCode</pre>
                    <pre><b>OrderDate: </b> @Orders.OrderDateTime</pre>
                </div>
                <div style="width:30%;float:right;">
                    <a class="block" style="float:right;margin-top:20%" href="~/Home/PickOrder/@Constant.Encode(Orders.OrderNum)">Pick this Order</a>
                </div>
            </div>
        }
        if (Orders.OrderPickStatus == "Completed")
        {
            <div id="OrderBox" class="container" style="border-style:solid;color:deepskyblue">
                <div style="width:70%;float:left">
                    <b>OrderNumber:</b>
                    @Orders.OrderNum<pre><b>Customer Number:</b> @Orders.CustNum</pre>
                    <pre><b>Alloc Priority Code: </b> @Orders.AllocPriorityCode</pre>
                    <pre><b>Reserve Priority Code: </b> @Orders.ReservePriorityCode</pre>
                    <pre><b>OrderDate: </b> @Orders.OrderDateTime</pre>
                </div>
                <div style="width:30%;float:right;">
                    <a class="block" style="float:right;margin-top:20%;background-color:blue" href="javascript:void();">Pick Complete</a>
                </div>
            </div>
        }
        if (Orders.OrderPickStatus == "Quarantined")
        {
            <div id="OrderBox" class="container" style="border-style:solid;color:yellow">
                <div style="width:70%;float:left">
                    <b style="color:black">OrderNumber: @Orders.OrderNum</b>
                    <pre><b>Customer Number:</b> @Orders.CustNum</pre>
                    <pre><b>Alloc Priority Code: </b> @Orders.AllocPriorityCode</pre>
                    <pre><b>Reserve Priority Code: </b> @Orders.ReservePriorityCode</pre>
                    <pre><b>OrderDate: </b> @Orders.OrderDateTime</pre>
                </div>
                <div style="width:30%;float:right;">
                    <a class="block" style="float:right;margin-top:20%;background-color:yellow;color:black" href="javascript:void();">Quarantined</a>
                </div>
            </div>
        }
    }


</div>